<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity2">
    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        app:cardCornerRadius="20sp"
        app:cardElevation="8sp"
        android:layout_height="250dp">
        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/ppf"
            android:id="@+id/ImageViewId"
            android:layout_height="match_parent">
        </ImageView>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_marginTop="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/NameID"
            android:text="Name : "
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#151212"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Aniruddha Roy"
            android:id="@+id/TextViewId"
            android:textColor="#120909"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/EmailID"
            android:text="Email : "
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#151212"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/TextViewEmail"
            android:text="roy.aniruddha98@gmail.com"
            android:textColor="#120909"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="20sp"
        app:cardElevation="8sp"
        android:id="@+id/GL"
        app:cardCornerRadius="20sp"
        android:layout_width="200dp"
        android:layout_height="60dp">
        <TextView
            android:text="Google Loout"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="#ff22"
            android:id="@+id/google_logout"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="20sp"
        android:id="@+id/FL"
        app:cardElevation="8sp"
        app:cardCornerRadius="20sp"
        android:layout_width="200dp"
        android:layout_height="60dp">
        <TextView
            android:text="FaceBook Loout"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="#1E88E5"
            android:id="@+id/facebook_logout"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </androidx.cardview.widget.CardView>
</LinearLayout>